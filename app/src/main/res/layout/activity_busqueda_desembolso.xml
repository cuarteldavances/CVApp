<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crediveloz.cv.DesembolsoActivity"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#dddddd"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="195dp"
        android:layout_height="60dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@mipmap/logomaincv" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/relativeLayout10"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:id="@+id/textView8"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/edt_bdnombre"
            android:inputType="textPersonName"
            android:hint="Nombre del Cliente"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView8"
            android:layout_toEndOf="@+id/textView8"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#000000" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Desembolsar"
            android:id="@+id/btn_desmbolsar"
            android:layout_below="@+id/edt_bdnombre"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:typeface="normal"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#002C83"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/relativeLayout10"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/relativeLayout14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monto:"
            android:id="@+id/textView12"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:id="@+id/edt_bdmonto"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView12"
            android:layout_toEndOf="@+id/textView12"
            android:layout_alignParentEnd="false"
            android:textStyle="normal"
            android:textSize="12sp"
            android:layout_alignParentRight="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Periodo:"
            android:id="@+id/textView14"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/edt_bdmonto"
            android:layout_toEndOf="@+id/edt_bdmonto" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/edt_dias"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView14"
            android:layout_toEndOf="@+id/textView14" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/relativeLayout14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/relativeLayout17">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuota:"
            android:id="@+id/textView15"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:id="@+id/edt_bdcuota"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView15"
            android:layout_toEndOf="@+id/textView15"
            android:textStyle="normal"
            android:textSize="12sp"
            android:enabled="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interes"
            android:id="@+id/textView16"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="13sp"
            android:layout_alignTop="@+id/textView15"
            android:layout_toRightOf="@+id/edt_bdcuota"
            android:layout_toEndOf="@+id/edt_bdcuota" />

        <EditText
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:id="@+id/edt_interes"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView16"
            android:layout_toEndOf="@+id/textView16"
            android:textStyle="normal"
            android:textSize="12sp"
            android:editable="false"
            android:enabled="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#dddddd"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@mipmap/bottomcv3"
            android:layout_alignBottom="@+id/cobros"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/pagosbtn"
            android:id="@+id/pagos"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:alpha="0" />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="cobros"
            android:id="@+id/cobros"
            android:alpha="0"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/pagos"
            android:layout_marginLeft="8dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="clientes"
            android:id="@+id/programacion"
            android:alpha="0"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cobros"
            android:layout_toEndOf="@+id/cobros"
            android:layout_marginLeft="70dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="entrega"
            android:id="@+id/entrega"
            android:alpha="0"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/programacion"
            android:layout_toEndOf="@+id/programacion"
            android:layout_marginLeft="3dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/relativeLayout17"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monto Total:"
            android:id="@+id/textView17"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:id="@+id/edt_bdmtotal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView17"
            android:layout_toEndOf="@+id/textView17"
            android:textStyle="normal"
            android:textSize="12sp"
            android:editable="false"
            android:enabled="true" />
    </RelativeLayout>

</RelativeLayout>
