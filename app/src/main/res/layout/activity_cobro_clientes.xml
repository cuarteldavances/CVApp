<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#dddddd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout7"
        android:layout_marginBottom="10dp"
        android:background="#d80027">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Territorio"
            android:id="@+id/tv_sucursal"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_alignTop="@+id/tv_ruta"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ruta"
            android:id="@+id/tv_ruta"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="70dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignTop="@+id/relativeLayout7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:layout_above="@+id/relativeLayout16">

        <!-- A RecyclerView with some commonly used attributes -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/note_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#dddddd"
        android:id="@+id/relativeLayout16">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@mipmap/bottomcv2"
            android:layout_alignBottom="@+id/desembolso"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/pagosbtn"
            android:id="@+id/pagos"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:alpha="0" />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="desembolso"
            android:id="@+id/desembolso"
            android:alpha="0"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/pagos"
            android:layout_marginLeft="74dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="clientes"
            android:id="@+id/programacion"
            android:alpha="0"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/desembolso"
            android:layout_toEndOf="@+id/desembolso"
            android:layout_marginLeft="3dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="entrega"
            android:id="@+id/entrega"
            android:alpha="0"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/programacion"
            android:layout_toEndOf="@+id/programacion"
            android:layout_marginLeft="3dp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="195dp"
        android:layout_height="60dp"
        android:id="@+id/imageView8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@mipmap/logomaincv"
        android:layout_marginTop="5dp" />


</RelativeLayout>